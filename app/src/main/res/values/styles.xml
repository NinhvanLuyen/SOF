<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_textview_m</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


    <style name="line_small">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.3dp</item>
    </style>

    <style name="text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_textview_l</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/activity_small_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_small_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_small_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_textview_l</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginRight">?attr/actionBarSize</item>
    </style>


    <style name="text_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_textview_m</item>
        <item name="android:layout_marginBottom">@dimen/activity_small_margin</item>
        <item name="android:layout_marginLeft">@dimen/activity_small_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_small_margin</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>
